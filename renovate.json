{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "schedule": ["after 6pm on sunday"],
      "stabilityDays": 3
    }
  ],
  "commitBodyTable": true,
  "prConcurrentLimit": 3
}
